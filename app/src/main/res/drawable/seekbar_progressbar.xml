<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>

            <gradient
                android:angle="180"
                android:endColor="#919391"
                android:startColor="#989998" />
            <stroke android:width="4dp" android:color="#acaeae" />
            <padding android:left="7dp" android:top="7dp"
                android:right="7dp" android:bottom="7dp" />
        </shape>
    </item>
    <item>
        <clip>
            <shape android:shape="rectangle" >
                <corners android:radius="5dp" />

                <gradient
                    android:angle="180"
                    android:endColor="#706e6e"
                    android:startColor="#666565" />
                <padding android:left="7dp" android:top="7dp"
                    android:right="7dp" android:bottom="7dp" />
            </shape>
        </clip>
    </item>
    <item>
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="5dp" />

                <gradient
                    android:angle="180"
                    android:endColor="#6e6e6d"
                    android:startColor="#5b5a59" />
                <padding android:left="7dp" android:top="7dp"
                    android:right="7dp" android:bottom="7dp" />
            </shape>
        </clip>
    </item>

</layer-list>